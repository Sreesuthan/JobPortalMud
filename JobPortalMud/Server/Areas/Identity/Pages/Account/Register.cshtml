@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container col-lg-5 mb-5">
    <div class="row justify-content-center border rounded-3">
        <div class="mb-3">
            <h4 class="text-center mb-4 m-lg-3">Welcome to Entertainment Careers.Net</h4>
        @if (TempData["AlertMessage"] != null)
        {
            <div class="col-12 pb-20">
                <div class="alert alert-success">
                    @TempData["AlertMessage"]
                </div>
            </div>
        }
        <form method="post">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-floating mb-3 col-lg-11 m-lg-3 ">
                <input type="text" id="username" class="form-control" asp-for="Model.Username" placeholder="User Name">
                <label for="username" asp-for="Model.Username">User Name</label>
            </div>
            <div class="form-floating mb-3 col-lg-11 m-lg-3">
                <input type="text" id="email" class="form-control" asp-for="Model.Email" placeholder="Email address">
                <label for="email" asp-for="Model.Email">Email</label>
            </div>
            <div class="form-floating mb-3 col-lg-11 m-lg-3">
                <input type="password" id="password" class="form-control" asp-for="Model.Password" placeholder="Password">
                <label for="password" asp-for="Model.Password">Password</label>
                <span style="font-size: 11px;" class="text-center text-secondary">Passwords must contains 6 characters, digit(0-9), uppercase(A-Z), special character.</span>
            </div>
            <div class="form-floating mb-3 col-lg-11 m-lg-3">
                <input type="text" id="confirm" class="form-control" asp-for="Model.ConfirmPassword" placeholder="Re-type Password">
                <label for="confirm" asp-for="Model.ConfirmPassword">Re-Type Password</label>
            </div>
            <div class="form-group col-lg-11 m-lg-3">
                <select id="loginItem" asp-for="Model.Role" class="form-select" >
                    <option value="none" selected disabled hidden>
                        Select Login Type
                    </option>
                        <option>Job Seeker</option>
                        <option>Employer</option>
                </select>
                <label for="loginItem" asp-for="Model.Role" hidden>Select Login Type</label>
            </div>

             <div class="checkbox mb-4 col-lg-11 m-lg-3">
                    <input type="checkbox" asp-for="Model.Agreement" class="form-check-input"/>
                    <label class="text-black" asp-for="Model.Agreement">I agree to the privacy policy and terms.</label>
             </div>

                <div class="form-floating mb-1 d-grid m-lg-3">
                    <input type="submit" value="SIGN UP" class="btn px-4 btn-primary text-white ">
            </div>

            </form>
            <hr>
            <h6 class="text-center">Already have an account with us? <a style="text-decoration: none" href="./Login">Login</a></h6>
    </div>
