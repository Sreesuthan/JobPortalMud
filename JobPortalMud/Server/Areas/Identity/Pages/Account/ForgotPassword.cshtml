@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                @if (TempData["AlertMessage"] != null)
                {
                    <div class="col-12 pb-20">
                        <div class="alert alert-success">
                            @TempData["AlertMessage"]
                        </div>
                    </div>
                }
                <form method="post" class="border rounded-3">
                    <h4 class="mb-4 m-lg-3">Please enter Email for Reset Password</h4>
                    <div asp-validation-summary="All" class="text-danger">
                    </div>
                    <div class="form-floating mb-3 col-lg-11 m-lg-3">
                        <input type="text" id="email" class="form-control" asp-for="Model.Email" placeholder="Email address">
                        <label for="email" asp-for="Model.Email">Email</label>
                    </div>

                    <div class="form-floating m-lg-3 mb-3">
                        <input type="submit" value="Submit" class="btn px-4 btn-primary text-white">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
